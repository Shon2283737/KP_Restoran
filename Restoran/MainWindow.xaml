<Window x:Class="Restoran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restoran"
        mc:Ignorable="d"
        Title="Авторизация" Height="200.45" Width="184.096">
    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Top">
        <Grid HorizontalAlignment="Left" Height="168" Width="175" VerticalAlignment="Top">
            <Label Content="АРМ ресторан" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="авторизация" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtLogin" HorizontalAlignment="Center" Height="23" Margin="0,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Height="23" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button Content="Войти" HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Authorization"/>

        </Grid>
    </Viewbox>
</Window>
