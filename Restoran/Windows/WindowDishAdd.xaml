<Window x:Class="Restoran.Windows.WindowDishAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restoran.Windows"
        mc:Ignorable="d"
        Title="Добавление и редактирование блюда" Height="345.584" Width="249.999" Loaded="Window_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="228" Margin="10,12,0,0" VerticalAlignment="Top" Width="215" Background="#19000000">
            <Label Content="название блюда"/>
            <TextBox x:Name="txtName" Height="23" TextWrapping="Wrap"/>
            <Label Content="ингридиенты"/>
            <TextBox x:Name="txtIngredients" Height="46" TextWrapping="Wrap"/>
            <Label Content="меню"/>
            <ComboBox x:Name="cmbMenus"/>
            <Label Content="цена"/>
            <TextBox x:Name="txtPrice" Height="23" TextWrapping="Wrap"/>
        </StackPanel>
        <Button Content="добавить" HorizontalAlignment="Left" Margin="10,255,0,0" VerticalAlignment="Top" Width="215" Click="Button_Click_Dish_Add"/>
        <Button x:Name="btnDishRedact" Content="редактировать" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Width="215" Click="btnDishRedact_Click"/>

    </Grid>
</Window>
